<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="dismiss"
    tools:context="com.zxy.tracee.ui.PreviewDiaryActivity"
    >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/window_background"
        android:elevation="22dp"
        android:orientation="vertical"
        android:transitionName="map_transition">

        <TextView
            android:id="@+id/preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:padding="20dp"
            android:text="鸟巢一日游"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/preview_content"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:maxLines="4"
            android:padding="10dp"
            android:text="鸟巢水立方，刁刁的" />

        <TextView
            android:id="@+id/preview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="2015/03/09"
            android:textColor="#43a047" />

        <TextView
            android:id="@+id/preview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Beijing,Chaoyang District"
            android:textColor="#43a047" />

        <Button
            android:id="@+id/view_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#43a047"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="View The Detail"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#9e9e9e"></LinearLayout>

        <TextView
            android:id="@+id/view_all_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="View All Tracee Today"
            android:textColor="#3670ca"
            android:textSize="15dp" />
    </LinearLayout>

</FrameLayout>
